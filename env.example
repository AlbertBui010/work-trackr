# =============================================================================
# WORK-TRACKR ENVIRONMENT VARIABLES
# =============================================================================

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Supabase project URL (required)
VITE_SUPABASE_URL=https://your-project.supabase.co

# Supabase anonymous key (required)
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# Supabase service role key (for server-side operations)
VITE_SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Application name
VITE_APP_NAME=WorkTrackr

# Application version
VITE_APP_VERSION=1.0.0

# Application environment (development, staging, production)
VITE_APP_ENV=development

# Base URL for the application
VITE_APP_BASE_URL=http://localhost:5173

# API base URL (if using external APIs)
VITE_API_BASE_URL=http://localhost:3000/api

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT secret for token signing (if using custom JWT)
VITE_JWT_SECRET=your-jwt-secret-key

# Session timeout in minutes
VITE_SESSION_TIMEOUT=60

# OAuth redirect URL
VITE_OAUTH_REDIRECT_URL=http://localhost:5173/auth/callback

# =============================================================================
# INTERNATIONALIZATION (i18n)
# =============================================================================
# Default language
VITE_DEFAULT_LOCALE=en

# Supported locales (comma-separated)
VITE_SUPPORTED_LOCALES=en,vi

# Fallback locale
VITE_FALLBACK_LOCALE=en

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_MUSIC_PLAYER=true
VITE_ENABLE_EXCEL_EXPORT=true
VITE_ENABLE_GOALS=true
VITE_ENABLE_TIMER=true
VITE_ENABLE_KEYBOARD_SHORTCUTS=true
VITE_ENABLE_VIRTUALIZATION=true

# =============================================================================
# ANALYTICS & TRACKING
# =============================================================================
# Google Analytics ID (optional)
VITE_GA_TRACKING_ID=your-ga-tracking-id

# Google Tag Manager ID (optional)
VITE_GTM_ID=your-gtm-id

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# YouTube API Key (for music player)
VITE_YOUTUBE_API_KEY=your-youtube-api-key

# Spotify API credentials (if using Spotify)
VITE_SPOTIFY_CLIENT_ID=your-spotify-client-id
VITE_SPOTIFY_CLIENT_SECRET=your-spotify-client-secret

# =============================================================================
# PERFORMANCE & OPTIMIZATION
# =============================================================================
# Enable/disable performance monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Virtual scrolling settings
VITE_VIRTUAL_SCROLL_ITEM_HEIGHT=60
VITE_VIRTUAL_SCROLL_OVERSCAN=5

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================
# Enable debug mode
VITE_DEBUG_MODE=false

# Enable detailed logging
VITE_ENABLE_LOGGING=true

# Log level (debug, info, warn, error)
VITE_LOG_LEVEL=info

# =============================================================================
# STORAGE & CACHING
# =============================================================================
# Local storage prefix
VITE_STORAGE_PREFIX=worktrackr_

# Cache expiration time in minutes
VITE_CACHE_EXPIRATION=30

# =============================================================================
# NOTIFICATIONS
# =============================================================================
# Enable browser notifications
VITE_ENABLE_NOTIFICATIONS=true

# Notification timeout in seconds
VITE_NOTIFICATION_TIMEOUT=5

# =============================================================================
# EXPORT & IMPORT
# =============================================================================
# Excel export settings
VITE_EXCEL_EXPORT_FILENAME=worktrackr-export
VITE_EXCEL_EXPORT_SHEET_NAME=WorkLogs

# =============================================================================
# THEME & UI
# =============================================================================
# Default theme (light, dark, system)
VITE_DEFAULT_THEME=system

# Enable animations
VITE_ENABLE_ANIMATIONS=true

# =============================================================================
# TIMER & POMODORO
# =============================================================================
# Default work session duration in minutes
VITE_DEFAULT_WORK_DURATION=25

# Default break duration in minutes
VITE_DEFAULT_BREAK_DURATION=5

# Default long break duration in minutes
VITE_DEFAULT_LONG_BREAK_DURATION=15

# Sessions before long break
VITE_SESSIONS_BEFORE_LONG_BREAK=4

# =============================================================================
# GOALS & TARGETS
# =============================================================================
# Default daily work hours target
VITE_DEFAULT_DAILY_HOURS=8

# Default weekly work hours target
VITE_DEFAULT_WEEKLY_HOURS=40

# =============================================================================
# SECURITY & PRIVACY
# =============================================================================
# Enable data encryption
VITE_ENABLE_ENCRYPTION=false

# Privacy mode (disable tracking)
VITE_PRIVACY_MODE=false

# =============================================================================
# BACKUP & SYNC
# =============================================================================
# Enable automatic backup
VITE_ENABLE_AUTO_BACKUP=true

# Backup interval in hours
VITE_BACKUP_INTERVAL=24

# =============================================================================
# INTEGRATIONS
# =============================================================================
# Slack webhook URL (for notifications)
VITE_SLACK_WEBHOOK_URL=your-slack-webhook-url

# Discord webhook URL (for notifications)
VITE_DISCORD_WEBHOOK_URL=your-discord-webhook-url

# Email service (if using email notifications)
VITE_EMAIL_SERVICE_URL=your-email-service-url
VITE_EMAIL_API_KEY=your-email-api-key 